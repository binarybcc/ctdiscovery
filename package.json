{
  "name": "ctdiscovery",
  "version": "1.1.1",
  "description": "Non-destructive AI development environment scanner with real-time dashboard and Claude integration",
  "main": "src/cli.js",
  "bin": {
    "ctdiscovery": "src/cli.js",
    "ctd": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "dev": "node src/cli.js --dev",
    "scan": "node src/cli.js --all --quiet",
    "tools": "node src/cli.js --conversation-starter --show-starter --quiet",
    "tools:quick": "node src/cli.js --conversation-starter --quiet",
    "context": "node src/cli.js --generate-context --quiet",
    "dashboard": "node src/cli.js --all --quiet",
    "watch": "watch -n 30 'npm run dashboard'",
    "test": "node --test src/test/*.test.js",
    "test:watch": "node --test --watch src/test/*.test.js"
  },
  "keywords": [
    "ai",
    "claude",
    "claude-code",
    "development",
    "tools",
    "scanner",
    "dashboard",
    "cli",
    "mcp",
    "environment",
    "developer-tools",
    "ai-assistant"
  ],
  "author": {
    "name": "binarybcc",
    "url": "https://github.com/binarybcc"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/binarybcc/ctdiscovery.git"
  },
  "bugs": {
    "url": "https://github.com/binarybcc/ctdiscovery/issues"
  },
  "homepage": "https://github.com/binarybcc/ctdiscovery#readme",
  "files": [
    "src/",
    "README.md",
    "GETTING-STARTED.md",
    "LICENSE",
    "OVERVIEW.md"
  ]
}
